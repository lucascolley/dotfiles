[alias]
    s = switch
    sub = submodule update --init
    sc = switch -c
    pum = pull upstream main
    pom = push origin main --no-verify
    cm = commit -m
    puo = push -u origin
    fa = fetch --all
    ca = commit --amend
    b = branch
	fpp = !git fa && git pum && git pom

[credential "https://github.com"]
	helper = !~/.pixi/envs/gh/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !~/.pixi/envs/gh/bin/gh auth git-credential

[commit]
    gpgsign = true
[tag]
    gpgSign = true

[core]
    excludesfile = ~/.gitignore
    editor = micro

[ghq "https://github.com/numpy/numpy/"]
root = ~/ghq/github.com/rgommers/pixi-dev-scipystack/numpy/

[ghq "https://github.com/mesonbuild/meson/"]
root = ~/ghq/github.com/rgommers/pixi-dev-scipystack/meson/

[ghq "https://github.com/scikit-learn/scikit-learn"]
root = ~/ghq/github.com/glemaitre/python-stack/scikit-learn/scikit-learn
